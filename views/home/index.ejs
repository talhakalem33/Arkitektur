<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title><%= settings.brandName %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <meta name="keywords" content="emlak, <%= settings.brandName %>, gayrimenkul, satılık, kiralık">
    <meta name="description" content="<%='Resmi web sitemiz üzerinden hizmetlerimizi, hakkımızda bilgilerini ve randevu seçeneklerini inceleyin.' %>">
    <link rel="canonical" href="<%= 'https://www.orneksite.com' %>">

    <meta property="og:title" content="<%= settings.brandName %> - <%= content.carouselTitle %>">
    <meta property="og:description" content="<%= 'Web sitemizi ziyaret edin.' %>">
    <meta property="og:image" content="http://127.0.0.1:3000/img/<%= content.carouselImage %>">
    <meta property="og:url" content="http://127.0.0.1:3000/">
    <meta property="og:type" content="website">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= settings.brandName %> - <%= content.carouselTitle %>">
    <meta property="twitter:description" content="<%= 'Web sitemizi ziyaret edin.' %>">
    <meta property="twitter:image" content="http://127.0.0.1:3000/img/<%= content.carouselImage %>">

    <!-- Favicon -->
    <link href="/img/<%= settings.favicon %>" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600&family=Teko:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border position-relative text-primary" style="width: 6rem; height: 6rem;" role="status"></div>
        <img loading="lazy" class="position-absolute top-50 start-50 translate-middle" src="img/icons/icon-1.png" alt="Icon">
    </div>
    <!-- Spinner End -->


    <%- include('../../partials/topbar', settings) %>
    <%- include('../../partials/navbar', settings) %>


    <% if (settings.isCarouselOn) { %>
    <!-- Carousel Start -->
    <div class="container-fluid p-0 pb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="owl-carousel header-carousel position-relative">
            <div class="owl-carousel-item position-relative" data-dot="<img src='img/carousel-1.jpg'>">
                <img class="img-fluid" loading="lazy" src="/img/<%= content.carouselImage %>" alt="<%= content.carouselTitle %>">
                <div class="owl-carousel-inner">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-10 col-lg-8">
                                <h2 class="display-1 text-white animated slideInDown"><%= content.carouselTitle %></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->
    <% } %>


    <% if (settings.isAboutOn && settings.isAboutMain) { %>
    <!-- About Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="about-img">
                        <img class="img-fluid" loading="lazy" src="/img/<%= content.aboutImage %>" alt="<%= content.aboutTitle %>">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <h4 class="section-title">Hakkımızda</h4>
                    <h2 class="display-5 mb-4"><%= content.aboutTitle %></h2>
                    <p class="mb-4"><%= content.aboutDescription %></p>
                    <div class="d-flex align-items-center mb-5">
                        <div class="border border-5 border-primary p-4 text-center mt-4">
                            <h4 class="lh-base text-uppercase mb-0"><%= content.aboutSlogan %></h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><br>
    <!-- About End -->
    <% } %>


    <% if (settings.isAppoinmentOn && settings.isAppoinmentMain) { %>
    <!-- Appointment Start -->
    <form method="post" action="/appointment">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5">
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                        <h4 class="section-title">Randevu</h4>
                        <h2 class="display-5 mb-4"><%= content.appoinmentTitle %></h2>
                        <p class="mb-4"><%= content.appoinmentDescription %></p>
                        <div class="row g-4">
                            <% if (settings.phoneNumber && settings.phoneNumber.toString().trim() !== '') { %>
                            <div class="col-12">
                                <div class="d-flex">
                                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-light" style="width: 65px; height: 65px;">
                                        <i class="fa fa-2x fa-phone-alt text-primary"></i>
                                    </div>
                                    <div class="ms-4">
                                        <p class="mb-2">Hemen Ara</p>
                                        <h3 class="mb-0"><%= settings.phoneNumber %></h3>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            <% if (settings.Email && settings.Email.trim() !== '') { %>
                            <div class="col-12">
                                <div class="d-flex">
                                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-light" style="width: 65px; height: 65px;">
                                        <i class="fa fa-2x fa-envelope-open text-primary"></i>
                                    </div>
                                    <div class="ms-4">
                                        <p class="mb-2">Email</p>
                                        <h3 class="mb-0"><%= settings.Email %></h3>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control" id="name" name="name" placeholder="İsim" style="height: 55px;">
                            </div>
                            <div class="col-12 col-sm-6">
                                <input type="email" class="form-control"  id="mail" name="mail" placeholder="Email" style="height: 55px;">
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="5" name="message" id="message" placeholder="Mesaj"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Randevu Al</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- Appointment End -->
    <% } %>


    <%- include('../../partials/footer', settings) %>


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>


    <script type="application/ld+json">
    {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "<%= settings.brandName %>",
    "url": "http://127.0.0.1:3000/",
    "logo": "http://127.0.0.1:3000/img/<%= settings.favicon %>",
    "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "<%= settings.phoneNumber %>",
        "contactType": "customer service",
        "areaServed": "TR",
        "availableLanguage": ["Turkish"]
    }
    }
    </script>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/wow/wow.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/counterup/counterup.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>